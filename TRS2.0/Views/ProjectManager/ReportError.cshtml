@model TRS2._0.Models.ViewModels.ReportErrorViewModel

<div class="container mt-3 report-error-ux">
    <div class="report-error-hero">
        <h2 class="mb-1 text-center"><i class="bi bi-bug"></i> Report an issue</h2>
        <p class="mb-0 text-center">Tell us what happened. We automatically include your user details so we can help you faster.</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success report-error-alert" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger report-error-alert" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        </div>
    }

    <div class="card report-error-card">
        <div class="card-header">
            <h4 class="mb-0 text-center"><i class="bi bi-envelope-paper"></i> New report</h4>
        </div>
        <div class="card-body">
            <div class="reporter-meta mb-4">
                <div class="reporter-meta-title">Sender information (included in the email)</div>
                <div class="row g-2 mt-1">
                    <div class="col-md-4">
                        <label class="form-label">User</label>
                        <input type="text" class="form-control" value="@Model.ReporterUserName" readonly />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Full name</label>
                        <input type="text" class="form-control" value="@Model.ReporterFullName" readonly />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Email</label>
                        <input type="text" class="form-control" value="@Model.ReporterEmail" readonly />
                    </div>
                </div>
            </div>

            <form asp-controller="ProjectManager" asp-action="SubmitErrorReport" method="post" enctype="multipart/form-data" class="row g-3">
                <div class="col-12">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="6" required placeholder="Describe steps to reproduce the issue, expected behavior, and actual behavior."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Attachment" class="form-label"></label>
                    <input asp-for="Attachment" type="file" class="form-control" />
                    <div class="form-text">Optional: screenshot or supporting file.</div>
                </div>

                <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-warning report-submit-btn">
                        <i class="bi bi-send"></i> Send report
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .report-error-ux {
        max-width: 980px;
    }

    .report-error-hero {
        border: 1px solid #d7e6f3;
        border-radius: 14px;
        background: linear-gradient(135deg, #0e4f86 0%, #1b6dac 100%);
        color: #fff;
        padding: 14px 16px;
        margin-bottom: 14px;
        box-shadow: 0 8px 18px rgba(12,56,96,.16);
    }

    .report-error-alert {
        border-radius: 10px;
    }

    .report-error-card {
        border: 1px solid #d7e6f3;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(14,57,98,.10);
        overflow: hidden;
    }

    .report-error-card > .card-header {
        background: linear-gradient(180deg, #154f82 0%, #0f3f6a 100%);
        color: #fff;
        border-bottom: 0;
    }

    .reporter-meta {
        border: 1px solid #dbe9f6;
        border-radius: 10px;
        padding: 12px;
        background: #f7fbff;
    }

    .reporter-meta-title {
        font-weight: 700;
        color: #114b7f;
        margin-bottom: 4px;
    }

    .report-submit-btn {
        border-radius: 10px;
        min-width: 180px;
        font-weight: 600;
        box-shadow: 0 6px 14px rgba(255,193,7,.3);
    }
</style>
