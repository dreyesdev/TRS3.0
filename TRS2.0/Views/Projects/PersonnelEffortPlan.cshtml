@using TRS2._0.Models.DataModels
@using static TRS2._0.Models.ViewModels.PersonnelEffortPlanViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
