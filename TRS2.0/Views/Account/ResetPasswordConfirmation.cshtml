@{
    ViewData["Title"] = "Password Reset Confirmation";
}

<div class="trs-auth-page">
    <div class="trs-auth-bg-orb trs-auth-bg-orb-a" aria-hidden="true"></div>
    <div class="trs-auth-bg-orb trs-auth-bg-orb-b" aria-hidden="true"></div>
    <div class="trs-auth-grid" aria-hidden="true"></div>

    <section class="trs-auth-card text-center">
        <div class="trs-auth-badge">Barcelona Supercomputing Center</div>
        <div class="trs-auth-icon"><i class="bi bi-check2-circle"></i></div>
        <h1 class="trs-auth-title">Password reset</h1>
        <p class="trs-auth-support-text">Your password has been successfully updated.</p>
        <p class="trs-auth-support-text mb-4">You can now log in with your new password.</p>

        <a asp-action="Login" asp-controller="Account" class="btn trs-auth-primary-btn w-100">Go to Login</a>
    </section>
</div>

<style>
    .trs-auth-page { position: relative; min-height: calc(100vh - 180px); border-radius: 18px; overflow: hidden; background: radial-gradient(circle at 20% 15%, #114e83 0%, #072f57 35%, #052241 70%, #031a35 100%); display: flex; align-items: center; justify-content: center; padding: 40px 16px; isolation: isolate; }
    .trs-auth-bg-orb { position: absolute; border-radius: 50%; opacity: .45; z-index: 0; }
    .trs-auth-bg-orb-a { width: 420px; height: 420px; background: radial-gradient(circle, rgba(96,180,255,.45) 0%, rgba(96,180,255,.08) 60%, transparent 75%); top: -130px; left: -120px; }
    .trs-auth-bg-orb-b { width: 360px; height: 360px; background: radial-gradient(circle, rgba(65,161,236,.38) 0%, rgba(65,161,236,.08) 60%, transparent 75%); bottom: -140px; right: -90px; }
    .trs-auth-grid { position: absolute; inset: 0; background-image: linear-gradient(rgba(255,255,255,.06) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,.06) 1px, transparent 1px); background-size: 42px 42px; mask-image: radial-gradient(circle at center, rgba(0,0,0,.95), rgba(0,0,0,.25) 70%, transparent 100%); z-index: 0; }
    .trs-auth-card { position: relative; z-index: 1; max-width: 560px; width: 100%; padding: 34px 30px; border: 1px solid rgba(185, 214, 242, 0.45); border-radius: 18px; background: linear-gradient(170deg, rgba(255,255,255,.18) 0%, rgba(255,255,255,.08) 100%); backdrop-filter: blur(8px); box-shadow: 0 20px 48px rgba(1, 16, 34, .35); color: #f6fbff; }
    .trs-auth-badge { display: inline-block; margin-bottom: 14px; padding: 6px 12px; border-radius: 999px; background: rgba(8, 40, 70, .55); border: 1px solid rgba(197, 223, 247, .45); font-size: .86rem; letter-spacing: .03em; color: #d7ecff; }
    .trs-auth-icon { font-size: 2.2rem; color: #bfe2ff; margin-bottom: 10px; }
    .trs-auth-title { font-size: clamp(1.8rem, 3vw, 2.5rem); margin-bottom: 12px; }
    .trs-auth-support-text { color: #dbeeff; }
    .trs-auth-primary-btn { background: linear-gradient(135deg, #ffd54f 0%, #ffbe2d 100%); border: none; color: #1d2e40; font-weight: 700; padding: 11px 28px; border-radius: 10px; box-shadow: 0 10px 24px rgba(255, 193, 60, .35); }
    .trs-auth-primary-btn:hover { color: #172637; transform: translateY(-1px); }
</style>
