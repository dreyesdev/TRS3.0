@model TRS2._0.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="trs-auth-page">
    <div class="trs-auth-bg-orb trs-auth-bg-orb-a" aria-hidden="true"></div>
    <div class="trs-auth-bg-orb trs-auth-bg-orb-b" aria-hidden="true"></div>
    <div class="trs-auth-grid" aria-hidden="true"></div>

    <section class="trs-auth-card">
        <div class="trs-auth-badge">Barcelona Supercomputing Center</div>
        <h1 class="trs-auth-title">Welcome Back</h1>

        <form asp-action="Login" method="post" class="trs-auth-form">
            <div class="mb-3 text-start">
                <label asp-for="BSCID" class="form-label">Username</label>
                <input asp-for="BSCID" class="form-control trs-auth-input" />
                <span asp-validation-for="BSCID" class="text-danger"></span>
            </div>

            <div class="mb-3 text-start">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control trs-auth-input" type="password" id="passwordField" />
                    <button type="button" class="btn btn-outline-secondary trs-auth-aux-btn" onclick="togglePassword(event)" title="Show/Hide Password">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mt-2 text-start">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Remember me</label>
            </div>

            <div class="text-end mt-2">
                <a asp-action="ForgotPassword" asp-controller="Account" class="trs-auth-link">Forgot your password?</a>
            </div>

            <button type="submit" class="btn trs-auth-primary-btn mt-3 w-100">Log in</button>

            <div class="text-danger mt-3">@Html.ValidationSummary(true)</div>
        </form>

        <div class="mt-3">
            Don't have an account? <a asp-action="Register" asp-controller="Account" class="trs-auth-link">Register</a>
        </div>

        <div class="trs-auth-note mt-4 text-start">
            <strong>Having trouble logging in?</strong><br />
            - Make sure to <strong>copy and paste</strong> your password to avoid typos.<br />
            - Try opening the site in a <strong>private/incognito window</strong>.<br />
            - Still having issues? Contact us at <a href="mailto:iss@bsc.es">iss@bsc.es</a>.
        </div>
    </section>
</div>

<style>
    .trs-auth-page {
        position: relative;
        min-height: calc(100vh - 180px);
        border-radius: 18px;
        overflow: hidden;
        background: radial-gradient(circle at 20% 15%, #114e83 0%, #072f57 35%, #052241 70%, #031a35 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 16px;
        isolation: isolate;
    }

    .trs-auth-bg-orb {
        position: absolute;
        border-radius: 50%;
        opacity: .45;
        z-index: 0;
    }

    .trs-auth-bg-orb-a {
        width: 420px;
        height: 420px;
        background: radial-gradient(circle, rgba(96,180,255,.45) 0%, rgba(96,180,255,.08) 60%, transparent 75%);
        top: -130px;
        left: -120px;
    }

    .trs-auth-bg-orb-b {
        width: 360px;
        height: 360px;
        background: radial-gradient(circle, rgba(65,161,236,.38) 0%, rgba(65,161,236,.08) 60%, transparent 75%);
        bottom: -140px;
        right: -90px;
    }

    .trs-auth-grid {
        position: absolute;
        inset: 0;
        background-image: linear-gradient(rgba(255,255,255,.06) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,.06) 1px, transparent 1px);
        background-size: 42px 42px;
        mask-image: radial-gradient(circle at center, rgba(0,0,0,.95), rgba(0,0,0,.25) 70%, transparent 100%);
        z-index: 0;
    }

    .trs-auth-card {
        position: relative;
        z-index: 1;
        max-width: 540px;
        width: 100%;
        padding: 34px 30px;
        border: 1px solid rgba(185, 214, 242, 0.45);
        border-radius: 18px;
        background: linear-gradient(170deg, rgba(255,255,255,.18) 0%, rgba(255,255,255,.08) 100%);
        backdrop-filter: blur(8px);
        box-shadow: 0 20px 48px rgba(1, 16, 34, .35);
        color: #f6fbff;
    }

    .trs-auth-badge {
        display: inline-block;
        margin-bottom: 14px;
        padding: 6px 12px;
        border-radius: 999px;
        background: rgba(8, 40, 70, .55);
        border: 1px solid rgba(197, 223, 247, .45);
        font-size: .86rem;
        letter-spacing: .03em;
        color: #d7ecff;
    }

    .trs-auth-title {
        font-size: clamp(1.8rem, 3vw, 2.5rem);
        margin-bottom: 18px;
    }

    .trs-auth-input,
    .trs-auth-aux-btn {
        border-color: rgba(170, 204, 233, .65);
    }

    .trs-auth-input:focus {
        box-shadow: 0 0 0 .2rem rgba(160, 209, 255, .25);
        border-color: #8ec8f2;
    }

    .trs-auth-primary-btn {
        background: linear-gradient(135deg, #ffd54f 0%, #ffbe2d 100%);
        border: none;
        color: #1d2e40;
        font-weight: 700;
        padding: 11px 28px;
        border-radius: 10px;
        box-shadow: 0 10px 24px rgba(255, 193, 60, .35);
    }

    .trs-auth-primary-btn:hover {
        color: #172637;
        transform: translateY(-1px);
    }

    .trs-auth-link {
        color: #d7ecff;
    }

    .trs-auth-link:hover {
        color: #fff;
    }

    .trs-auth-note {
        padding: 12px 14px;
        border-radius: 10px;
        background: rgba(5, 34, 60, .45);
        border: 1px solid rgba(188, 216, 242, .35);
        color: #d8ecff;
        font-size: .92rem;
    }

    .trs-auth-note a {
        color: #fff;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(event) {
            const input = document.getElementById("passwordField");
            const icon = event.currentTarget.querySelector("i");
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            }
        }
    </script>
}
