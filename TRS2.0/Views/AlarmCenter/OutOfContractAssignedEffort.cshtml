@model TRS2._0.Models.ViewModels.OutOfContractAssignedEffortPageViewModel

@{
    ViewData["Title"] = "Out of Contract";
}

<div class="container-fluid py-3">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h3 class="mb-1"><i class="bi bi-exclamation-octagon-fill text-danger me-2"></i>Out of Contract con esfuerzo asignado</h3>
                <p class="text-muted mb-0">Personas con esfuerzo en el mes actual o anterior sin dedicación activa. Puedes abrir directamente el esfuerzo por persona/proyecto para corregirlo.</p>
            </div>
            <div class="text-md-end">
                <span class="badge bg-danger-subtle text-danger-emphasis fs-6 px-3 py-2">@Model.Rows.Count incidencia(s)</span>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            @if (Model.Rows.Count == 0)
            {
                <div class="alert alert-success mb-0">
                    <i class="bi bi-check-circle-fill me-2"></i>No hay incidencias Out of Contract con esfuerzo asignado para tu alcance actual.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Persona</th>
                                <th>Proyecto</th>
                                <th>Mes</th>
                                <th class="text-end">Effort asignado</th>
                                <th class="text-center">Estado</th>
                                <th class="text-end">Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in Model.Rows)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@row.PersonFullName</div>
                                        <small class="text-muted">ID: @row.PersonId</small>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">@row.ProjectDisplayName</div>
                                        <small class="text-muted">ID: @row.ProjectId</small>
                                    </td>
                                    <td>@row.Month.ToString("MMMM yyyy")</td>
                                    <td class="text-end">
                                        <a href="@row.ResolveUrl" class="link-primary fw-semibold text-decoration-none">@row.AssignedEffort.ToString("0.##")</a>
                                    </td>
                                    <td class="text-center"><span class="badge rounded-pill bg-danger">Out of contract</span></td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-primary" href="@row.ResolveUrl">
                                            <i class="bi bi-pencil-square me-1"></i>Revisar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
