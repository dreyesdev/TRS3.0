@model IEnumerable<TRS2._0.Models.DataModels.Personnel>

@{
    ViewData["Title"] = "Personnel Selection";
}

<div class="container personnel-ux timesheet-landing-ux mt-3">
    <h2 class="personnel-page-title">Investigador · Timesheet Access</h2>

    <div class="personnel-filter-shell">
        <div class="row g-3">
            <div class="col-md-6">
                <h3 class="text-primary">Person Selection</h3>

                <div id="personnelSelectContainer" class="custom-select">
                    <div id="personnelSelectHeader" class="person-result" data-person-id="">
                        <span>Please select a person from the list below:</span>
                    </div>
                    <div id="personnelSelect" class="search-results-container" style="display: none;">
                        @foreach (var person in Model.OrderBy(p => p.Surname).ThenBy(p => p.Name))
                        {
                            <div class="person-result" data-person-id="@person.Id">
                                <span>@person.Surname, @person.Name</span>
                                <span class="badge bg-primary">@person.DepartmentNavigation.Name</span>
                            </div>
                        }
                    </div>
                </div>

                <p class="mt-3 mb-1">Or start typing here the name of the person:</p>
                <input type="text" id="searchTerm" class="form-control" placeholder="Start typing..." onkeyup="filterPersonnel()" />
                <div id="searchResults" class="search-results-container mt-2"></div>
            </div>

            <div class="col-md-6">
                <h3 class="text-primary">Person Details</h3>
                <div id="personDetails" class="card p-3">
                    <p class="text-muted mb-0 text-center">Select a person to open their timesheet.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('personnelSelectHeader').addEventListener('click', function () {
            var personnelSelect = document.getElementById('personnelSelect');
            personnelSelect.style.display = (personnelSelect.style.display === 'none' || personnelSelect.style.display === '') ? 'block' : 'none';
        });

        document.getElementById('personnelSelect').addEventListener('click', function (event) {
            const row = event.target.closest('div.person-result');
            if (!row) return;
            var personId = row.getAttribute('data-person-id');
            window.location.href = '@Url.Action("GetTimeSheetsForPerson", "Timesheet", new { personId = "__personId__" })'.replace('__personId__', personId);
        });

        function filterPersonnel() {
            var searchTerm = document.getElementById('searchTerm').value;

            $.ajax({
                url: '@Url.Action("GetFilteredPersonnel", "Personnels")',
                data: { searchTerm: searchTerm },
                success: function (data) {
                    var resultsDiv = document.getElementById('searchResults');
                    resultsDiv.innerHTML = '';

                    data.forEach(function (person) {
                        var personDiv = document.createElement('div');
                        personDiv.className = 'person-result';
                        personDiv.innerHTML = `<span>${person.surname}, ${person.name}</span> <span class="badge bg-primary">${person.departmentName || 'N/A'}</span>`;
                        personDiv.setAttribute('data-person-id', person.id);

                        personDiv.onclick = function () {
                            document.querySelectorAll('.person-result').forEach(function (el) {
                                el.classList.remove('active');
                            });
                            this.classList.add('active');
                            window.location.href = '@Url.Action("GetTimeSheetsForPerson", "Timesheet", new { personId = "__personId__" })'.replace('__personId__', person.id);
                        };

                        resultsDiv.appendChild(personDiv);
                    });
                    resultsDiv.style.display = 'block';
                }
            });
        }

        document.getElementById('searchTerm').addEventListener('focus', function () {
            document.getElementById('searchResults').style.display = 'block';
        });

        document.addEventListener('click', function (event) {
            var personnelSelect = document.getElementById('personnelSelect');
            var personnelSelectHeader = document.getElementById('personnelSelectHeader');
            if (!personnelSelect.contains(event.target) && event.target !== personnelSelectHeader) {
                personnelSelect.style.display = 'none';
            }
        });
    </script>
}

<style>
    .timesheet-landing-ux .custom-select {
        background-color: #f8fbff;
        border: 1px solid #d3e4f5;
        padding: 10px;
        border-radius: 10px;
    }

    .timesheet-landing-ux .search-results-container {
        max-height: 280px;
        overflow-y: auto;
        border: 1px solid #d3e4f5;
        border-radius: 10px;
        padding: 6px;
        background-color: #fff;
        display: none;
    }

    .timesheet-landing-ux .person-result {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px;
        border-bottom: 1px solid #e9f1f8;
        cursor: pointer;
        transition: background-color .2s ease;
    }

    .timesheet-landing-ux .person-result:last-child {
        border-bottom: none;
    }

    .timesheet-landing-ux .person-result:hover {
        background-color: #eef5ff;
    }

    .timesheet-landing-ux .person-result.active {
        background-color: #1b6dac;
        color: #fff;
    }

    .timesheet-landing-ux .card {
        min-height: 260px;
    }
</style>
