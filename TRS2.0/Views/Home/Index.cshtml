@{
    ViewData["Title"] = "Time Recording System (TRS)";
}

<div class="trs-home-landing">
    <div class="trs-home-bg-orb trs-home-bg-orb-a" aria-hidden="true"></div>
    <div class="trs-home-bg-orb trs-home-bg-orb-b" aria-hidden="true"></div>
    <div class="trs-home-grid" aria-hidden="true"></div>

    <section class="trs-home-hero-card">
        <div class="trs-home-badge">Barcelona Supercomputing Center Â· TRS 3.0</div>
        <h1 class="trs-home-title">Welcome to TRS</h1>
        <p class="trs-home-subtitle">Time Recording System to track, approve and manage working hours with clarity.</p>

        @if (!User.Identity.IsAuthenticated)
        {
            <a href="/Account/Login" class="btn trs-home-login-btn">Log In</a>
        }
        else
        {
            <div class="trs-home-quick-hint">
                Use the top navigation to access Timesheet, Projects, Utilities and leadership dashboards.
            </div>
        }
    </section>
</div>

<style>
    .trs-home-landing {
        position: relative;
        min-height: calc(100vh - 180px);
        border-radius: 18px;
        overflow: hidden;
        background: radial-gradient(circle at 20% 15%, #114e83 0%, #072f57 35%, #052241 70%, #031a35 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 16px;
        isolation: isolate;
    }

    .trs-home-bg-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(0);
        opacity: .45;
        z-index: 0;
    }

    .trs-home-bg-orb-a {
        width: 420px;
        height: 420px;
        background: radial-gradient(circle, rgba(96,180,255,.45) 0%, rgba(96,180,255,.08) 60%, transparent 75%);
        top: -130px;
        left: -120px;
    }

    .trs-home-bg-orb-b {
        width: 360px;
        height: 360px;
        background: radial-gradient(circle, rgba(65,161,236,.38) 0%, rgba(65,161,236,.08) 60%, transparent 75%);
        bottom: -140px;
        right: -90px;
    }

    .trs-home-grid {
        position: absolute;
        inset: 0;
        background-image: linear-gradient(rgba(255,255,255,.06) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,.06) 1px, transparent 1px);
        background-size: 42px 42px;
        mask-image: radial-gradient(circle at center, rgba(0,0,0,.95), rgba(0,0,0,.25) 70%, transparent 100%);
        z-index: 0;
    }

    .trs-home-hero-card {
        position: relative;
        z-index: 1;
        max-width: 840px;
        width: 100%;
        text-align: center;
        padding: 34px 30px;
        border: 1px solid rgba(185, 214, 242, 0.45);
        border-radius: 18px;
        background: linear-gradient(170deg, rgba(255,255,255,.18) 0%, rgba(255,255,255,.08) 100%);
        backdrop-filter: blur(8px);
        box-shadow: 0 20px 48px rgba(1, 16, 34, .35);
        color: #f6fbff;
    }

    .trs-home-badge {
        display: inline-block;
        margin-bottom: 14px;
        padding: 6px 12px;
        border-radius: 999px;
        background: rgba(8, 40, 70, .55);
        border: 1px solid rgba(197, 223, 247, .45);
        font-size: .86rem;
        letter-spacing: .03em;
        color: #d7ecff;
    }

    .trs-home-title {
        font-size: clamp(2rem, 4vw, 3.1rem);
        font-weight: 700;
        margin-bottom: 12px;
        line-height: 1.1;
    }

    .trs-home-subtitle {
        font-size: clamp(1rem, 1.6vw, 1.22rem);
        color: #dbedff;
        max-width: 680px;
        margin: 0 auto 24px;
        line-height: 1.45;
    }

    .trs-home-login-btn {
        background: linear-gradient(135deg, #ffd54f 0%, #ffbe2d 100%);
        border: none;
        color: #1d2e40;
        font-weight: 700;
        padding: 11px 28px;
        border-radius: 10px;
        box-shadow: 0 10px 24px rgba(255, 193, 60, .35);
    }

    .trs-home-login-btn:hover {
        color: #172637;
        transform: translateY(-1px);
    }

    .trs-home-quick-hint {
        margin: 8px auto 0;
        max-width: 640px;
        padding: 10px 14px;
        border-radius: 10px;
        background: rgba(5, 34, 60, .45);
        border: 1px solid rgba(188, 216, 242, .35);
        color: #d8ecff;
        font-size: .95rem;
    }
</style>
